<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/base_gray"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_spacing_medium">
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pay_payment"
            android:layout_marginRight="@dimen/text_spacing_larger"
            android:text=""/>
        <TextView
            android:id="@+id/pay_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_spacing_medium">
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发货"
            android:textColor="@color/text_black_light"/>
        <TextView
            android:id="@+id/tv_check_logistics"
            android:layout_toLeftOf="@+id/tv_sure_revice"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/text_spacing_medium"
            android:background="@drawable/shape_btn_baseblack"
            android:visibility="gone"
            android:text="查看物流"/>
        <TextView
            android:id="@+id/tv_sure_revice"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/tv_acncel_order"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_btnto_pay"
            android:textColor="@color/text_orange"
            android:layout_marginRight="@dimen/text_spacing_medium"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="取消订单"/>
        <TextView
            android:id="@+id/tv_btnto_pay"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="去付款"/>
        <TextView
            android:id="@+id/tv_anginto_buy"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="再次购买"/>
        <TextView
            android:id="@+id/tv_remind_delivery"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="提醒发货"/>
    </RelativeLayout>

</LinearLayout>