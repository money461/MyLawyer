<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
    android:id="@+id/ll_paysuccess_item">

    <ImageView
        android:layout_marginTop="@dimen/text_spacing_medium"
        android:id="@+id/item_land_icon"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/item_land_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="@dimen/text_spacing_medium"
        android:textColor="@color/text_black"
        android:textSize="14.0sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_spacing_medium"
        android:layout_marginRight="@dimen/text_spacing_medium"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_land_price"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center"
            android:text=""/>

        <TextView
            android:id="@+id/item_land_vipprice"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_btn_orage"
            android:textColor="@color/white"
            android:textSize="@dimen/text_level_13"
            android:gravity="center"
            android:text=""/>

    </RelativeLayout>
</LinearLayout>