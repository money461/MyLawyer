<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/base_gray"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="150.0dip"
                android:layout_height="150.0dip"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                android:layout_toLeftOf="@+id/textView4"
                android:layout_toStartOf="@+id/textView4"
                android:layout_weight="0.06"/>
            <TextView
                android:id="@+id/save_qrcode"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_below="@+id/iv_qrcode"
                android:layout_centerHorizontal="true"
                android:text="保存到手机"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_btn_baseblack"
                android:textColor="@color/text_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textColor="@color/text_black"
                android:text="我的邀请码"/>

            <TextView
                android:id="@+id/tv_mycode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text=""
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_level_18"/>

            <TextView
                android:id="@+id/btn_copy"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_btn_baseblack"
                android:text="点击复制"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_orange"
        android:layout_margin="@dimen/text_spacing_larger"
        android:text="爱心值获得规则"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:scaleType="matrix"
        android:background="@mipmap/recommend"/>


</LinearLayout>
</ScrollView>