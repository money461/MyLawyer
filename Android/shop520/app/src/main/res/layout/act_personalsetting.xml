<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/base_gray"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_changepwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:text="密码设置"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/text_spacing_medium"
            android:src="@mipmap/btn_more"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clean"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:text="清除缓存"/>

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/text_spacing_medium"
            android:gravity="center"
            android:text="0M"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_btn_baseblack"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:textSize="@dimen/text_level_16"
        android:layout_gravity="center_horizontal"
        android:text="退出登录"/>
</LinearLayout>