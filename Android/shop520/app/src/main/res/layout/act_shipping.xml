<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/base_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:text="物流状态"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_level_16"/>
        <TextView
            android:id="@+id/shipping_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:textSize="@dimen/text_level_16"
            android:textColor="@color/text_orange"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:text="承运公司："
            android:gravity="center"
            android:textColor="@color/text_gary"
            android:textSize="@dimen/text_level_14"/>
        <TextView
            android:id="@+id/shipping_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_gary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:text="运单编号："
            android:gravity="center"
            android:textColor="@color/text_gary"
            android:textSize="@dimen/text_level_14"/>
        <TextView
            android:id="@+id/shipping_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_gary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:text="官方电话："
            android:gravity="center"
            android:textColor="@color/text_gary"
            android:textSize="@dimen/text_level_14"/>
        <TextView
            android:id="@+id/shipping_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_spacing_medium"
            android:gravity="center"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_gary"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_rcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_medium"
        android:padding="@dimen/text_spacing_medium"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>