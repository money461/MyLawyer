<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="230dp"
    android:background="@drawable/shape_write"
    android:layout_height="200dp">
    <TextView 
        android:id="@+id/tv_pop_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/text_black_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="尊敬的客户，您好：\n       感谢您对本商城的信任，如您有关于退款和退货的需求及问题，请您点击下方的按钮，联系商城客服为您处理。"/>
    <TextView 
        android:id="@+id/text_colse_pop"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@mipmap/cha_colose"/>
    <TextView
        android:id="@+id/btn_Service"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_spacing_medium"
        android:text="联系客服"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_pop_message"
        android:drawableLeft="@mipmap/phone"
        android:layout_margin="@dimen/text_spacing_medium"
        android:background="@drawable/shape_btn_orage"/>

   

</RelativeLayout>