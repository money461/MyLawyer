<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@mipmap/login_bg">
    <LinearLayout
        android:id="@+id/ll_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_write"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textSize="@dimen/text_level_16"
            android:text="520商城用户协议"/>
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_level_13"
            android:textColor="@color/text_black"
            android:text="@string/registagree"/>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_level_18"
        android:text="我同意"
        android:background="@drawable/shape_btn_black"/>

</LinearLayout>