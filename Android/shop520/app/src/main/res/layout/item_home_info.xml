<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_spacing_medium"
                android:paddingTop="@dimen/text_spacing_medium"
                android:paddingRight="@dimen/text_spacing_medium">

    <ImageView
        android:id="@+id/news_pic"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/news_pic"
        android:padding="@dimen/text_spacing_medium"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Animation"
            android:textColor="@color/text_black"
            android:textSize="14.0sp"/>
        <TextView
            android:id="@+id/item_news_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_spacing_smaller"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Animation"
            android:textColor="@color/text_gary"
            android:textSize="14.0sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_gray"
        android:layout_marginTop="@dimen/text_spacing_medium"
        android:layout_below="@+id/news_pic"/>


</RelativeLayout>