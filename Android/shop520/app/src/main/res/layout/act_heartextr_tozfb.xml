<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/base_gray">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/zfb_icon"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:text="账号"/>
        <EditText
            android:id="@+id/zfb_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/text_gary"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_black_light"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:hint="手机号/邮箱/淘宝会员名"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:text="姓名"/>
        <EditText
            android:id="@+id/zfb_Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/text_gary"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_black_light"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:hint="请输入您的支付宝真实姓名"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:text="可提取爱心值"/>
        <TextView
            android:id="@+id/tv_use_heart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_orange"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:text="本次提取爱心值"/>
        <EditText
            android:id="@+id/et_heart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/text_gary"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_black_light"
            android:layout_toLeftOf="@+id/text"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|right"
            android:inputType="number"
            android:hint="请输入爱心值（至少50）"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="点"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_black"
            android:text="提取密码"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:textColorHint="@color/text_gary"
            android:textSize="@dimen/text_level_14"
            android:textColor="@color/text_black_light"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|right"
            android:inputType="textPassword"
            android:hint="请输入登录密码"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/btn_extract"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="立即提取"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_level_16"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_btn_black"/>

</LinearLayout>