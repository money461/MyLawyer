<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="100.0dip">

    <ImageView
        android:id="@+id/item_shop_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/text_spacing_small"
        android:src="@drawable/selector_item_checked"/>

    <ImageView
        android:id="@+id/item_shop_pic"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_shop_checked"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_spacing_large"
        android:layout_toRightOf="@id/item_shop_pic"
        android:orientation="vertical"
        android:padding="@dimen/text_spacing_medium">

        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Animation"
            android:textColor="#ff48495f"
            android:textSize="16.0sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_shop_proinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品简介"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_num_minus"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:gravity="center"
                android:text="-"
                android:textSize="26.0dip"/>

            <TextView
                android:id="@+id/item_shop_num"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_toRightOf="@id/shop_num_minus"
                android:gravity="center"
                android:text="1"/>

            <TextView
                android:id="@+id/shop_num_add"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_toRightOf="@id/item_shop_num"
                android:gravity="center"
                android:text="+"
                android:textSize="26.0dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="价格：20元"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>