<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/base_gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:background="@color/base_black">

        <com.tianzhi.shop520.ui.diyview.BaseImageView
            android:id="@+id/iv_head"
            android:layout_width="76.0dip"
            android:layout_height="76.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:src="@drawable/user_default"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dip"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/personal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_level_16"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/user_state"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/personal_name"
                android:layout_marginLeft="@dimen/text_spacing_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_text_orage"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_level_11"
                android:gravity="center"
                android:text=""/>
            <TextView
                android:id="@+id/tv_loveSurplus"
                android:layout_below="@+id/personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/text_orange"
                android:text=""/>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/text_spacing_larger">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提取爱心值"/>
        <TextView
            android:id="@+id/btn_extract"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_btn_orage"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="提取"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/heart_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/text_spacing_larger">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱心值记录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right_orange"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"/>

    </RelativeLayout>
</LinearLayout>