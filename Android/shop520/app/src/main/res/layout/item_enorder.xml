<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shopcar_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="傲宇智力原瓶进口小瓶红酒187ML"
                android:textColor="@color/text_black"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_level_14"
                />

            <TextView
                android:id="@+id/goods_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name"
                android:layout_marginTop="@dimen/text_spacing_small"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="来自大海的红酒，保护大海就是保护人类"
                android:textColor="@color/text_gary"
                android:textSize="@dimen/text_level_13"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥286.50"
                    android:textColor="@color/text_orange"/>

                <TextView
                    android:id="@+id/goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="@color/text_gary"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/base_gray"/>
</LinearLayout>