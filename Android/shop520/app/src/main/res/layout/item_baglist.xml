<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:id="@+id/item_relativeLayout"
    >
    <ImageView
        android:id="@+id/bag_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#670E161E"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:id="@+id/bag_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="送朋友套餐"/>
        <TextView
            android:id="@+id/bag_info_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_below="@+id/bag_title_left"
            android:text="超值会员礼包\n最多就俩行"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_right"
        android:layout_width="140dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#670E161E"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/bag_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="送朋友套餐"/>
        <TextView
            android:id="@+id/bag_info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_below="@+id/bag_title_right"
            android:text="超值会员礼包\n最多就俩行"/>

    </RelativeLayout>


</RelativeLayout>