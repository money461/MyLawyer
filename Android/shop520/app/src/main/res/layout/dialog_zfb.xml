<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="260dp"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_warning"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/zfb_icon"
            android:drawablePadding="@dimen/text_spacing_medium"
            android:text="您已成功登录支付宝"
            android:textSize="@dimen/text_level_20"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="现在您可以直接提取到支付宝了"
            android:textColor="@color/text_gary"
            android:textSize="16sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/btn_next"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="取消"
            android:background="@drawable/shape_btn_white_transparent"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_extract"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_btn_orange_transparent"
            android:textColor="@color/text_orange"
            android:text="提取"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>