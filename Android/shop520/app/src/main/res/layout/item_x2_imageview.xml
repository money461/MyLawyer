<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/base_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_spacing_medium"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_item"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/text_spacing_medium">
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_level_14"
                android:textColor="@color/text_black"
                android:text="ssssss"/>
            <TextView
                android:id="@+id/goods_description"
                android:layout_below="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text=""
                android:textSize="@dimen/text_level_13"
                android:textColor="@color/text_gary"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/text_level_16"
                    android:text=""/>
                <TextView
                    android:id="@+id/goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_spacing_medium">
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pay_payment"
            android:layout_marginRight="@dimen/text_spacing_larger"
            android:text=""/>
        <TextView
            android:id="@+id/pay_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥555.00(含运费￥0.00)"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_spacing_medium">
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发货"
            android:textColor="@color/text_black_light"/>
        <TextView
            android:id="@+id/tv_check_logistics"
            android:layout_toLeftOf="@+id/tv_sure_revice"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/text_spacing_medium"
            android:background="@drawable/shape_btn_baseblack"
            android:visibility="gone"
            android:text="查看物流"/>
        <TextView
            android:id="@+id/tv_sure_revice"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/tv_acncel_order"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_btnto_pay"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:layout_marginRight="@dimen/text_spacing_medium"
            android:text="取消订单"/>
        <TextView
            android:id="@+id/tv_btnto_pay"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="去付款"/>
        <TextView
            android:id="@+id/tv_anginto_buy"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="再次购买"/>
        <TextView
            android:id="@+id/tv_remind_delivery"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_orange"
            android:background="@drawable/shape_btn_orange_transparent"
            android:visibility="gone"
            android:text="提醒发货"/>
    </RelativeLayout>

</LinearLayout>
